{
  "name": "com.cordova.android.file.input.tester",
  "displayName": "Cordova File Input Tester",
  "version": "1.0.0",
  "description": "Tests the cordova file input for android",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf node_modules platforms plugins package-lock.json",
    "android-install": "cordova platform add android",
    "android": "cordova run android",
    "android-release": "cordova build android --release",
    "android-refresh": "npm run clean && npm install && npm run android-install && npm run android"
  },
  "author": "Ken Corbett",
  "cordova": {
    "plugins": {},
    "platforms": [
      "android"
    ]
  },
  "devDependencies": {
    "cordova": "^12.0.0",
    "cordova-android": "github:KenCorbettJr/cordova-android"
  }
}
